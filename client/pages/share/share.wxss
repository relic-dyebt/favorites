.page {
    width: 100%;
    height: 100%;
    background: #FAF7FE;
}

.input_instruction_wrapper {
    width: 100%;
    height: 150rpx;
    padding-bottom: 70rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}

.input_instruction {
    font-size:  32rpx;
    padding: 30rpx;
    color: #9A9A9A;
    border-bottom: 1px solid #D9D9D9;
}

.input_wrapper {
    width: 715rpx;
    background: #ffffff;
    padding: 20rpx;
}

.url_text {
    font-size: 36rpx;
    line-height: 60rpx;
}

.button_wrapper {
    width: 100%;
    height: 120rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}

.button {
    width: 70%;
    height: 100rpx;
    background: #FFC107;
    line-height: 100rpx;
    text-align: center;
    color: #ffffff;
    font-size: 36rpx;
    border-radius: 20rpx;
    box-shadow: 0 5rpx 5rpx #FFA000;
}
.guide .copyBtn {
    width: 180rpx;
    font-size: 20rpx;
    margin-top: 16rpx;
    margin-right: 0;
}