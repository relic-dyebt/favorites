page {
    height: 100%;
}

/* 导航 */

.navbar {
    display: flex;
    background: #fff;
    height: 9%;
}

.navbar .item {
    position: relative;
    flex: auto;
    text-align: center;
    line-height: 100rpx;
    font-size: 36rpx;
}

.navbar .item.active {
    color: #16a085;
}

.navbar .item.active:after {
    content: "";
    display: block;
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 2px;
    background: #16a085;
}
/* 分类 */
.category-container {
    width: 100%;
    height: 81%;
}
.category-wrapper{
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}
.category{
  width: 33.333%;
  height: 250rpx;
  padding: 20rpx;
  box-sizing: border-box;
}
.category-swiper {
    width: 100%;
    height: 100%;
    border-radius: 20rpx;
}

.category-swiper.none {
    width: 100%;
    height: 100%;
    border-radius: 20rpx;
    box-shadow: 0rpx 5rpx 5rpx #e0e0e0 ;
}

.category-swiper.current {
    box-shadow: 0px 5px 5px #E3F2FD;
}

.category-inner {
    width: 100%;
    height: 100%;
    background: #ffffff;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    border-radius: 20rpx
}
.category-title {
    padding-top: 5rpx;
    font-size: 36rpx;
    color: #212121;
}

.category-count {
    padding-top: 5rpx;
}

.category-delete {
    height: 100%;
    line-height: 100%;
    background: #e74c3c;
    color: #ffffff;
    font-size: 40rpx;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    border-radius: 20rpx;
}
.category-add {
    z-index: 9999;
    position: fixed;
    bottom: 0px;
    left:0px;
    width: 100%;
    height: 10%;
    padding: 30rpx;
    box-sizing: border-box;
    background: #ffffff;
    box-shadow: 0rpx -5rpx 25rpx #e5e5e5;
    align-items: center;
}
.category-input {
    width: 100%;
    font-size: 36rpx;
}
.category-dot-box {
    height: 56rpx;
    width: 56rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}

.category-dot {
    width: 30rpx;
    height: 30rpx;
    border-radius: 50%;
}





/* 文章 */
.article-container{
  width: 100%;
    height: 91%;
    background: #ffffff;
}
.article{
  width: 100%;
  display: flex;
  flex-direction: column;
  box-shadow: 0rpx 5rpx 5rpx #ecf0f1;
  padding-bottom: 10rpx;
  margin-bottom: 10rpx;
  background: #ffffff;
}
.article-header {
    display: flex;
    flex-direction: row;
    align-items: center;
    width: 100%;
    height: 120rpx;
    padding-left: 30rpx;
    box-shadow: 0rpx 5rpx 5rpx #ecf0f1;
    margin-bottom: 10rpx;
}
.article-category-title {
    padding-left: 30rpx;
    font-size: 40rpx;
}
.article-empty-view {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding-top: 150rpx;
    width: 100%;
}

.empty-image {
    width: 300rpx;
}

.empty-text {
    font-size: 36rpx;
    color: #757575;
}
.article-main {
    width: 100%;
    height: 340rpx;
}

.article-swiper {
    width: 100%;
    height: 100%;
}
.article-swiper-item-top{
  display: flex;
  flex-direction: row;
}
.article-info {
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding-top: 20rpx;
    padding-left: 30rpx;
    padding-right: 25rpx;
    padding-bottom: 20rpx;
}

.article-title {
    font-size: 33rpx;
    color: #212121;
    line-height: 45rpx;
    max-height: 135rpx;
    overflow: hidden;
}
.article-abstract {
    font-size: 30rpx;
    color: #555555;
    padding-top: 20rpx;
    overflow: hidden;
    line-height: 40rpx;
    max-height: 160rpx;
}
.article-image-wrapper {
    width: 280rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    padding-right: 30rpx;
}
.article-image {
    width: 240rpx;
    height: 280rpx;
    border-radius: 10rpx;
}
.article-swiper-item-bottom{
  display: flex;
  flex-direction: column;
}
.article-share {
    text-align: right;
    height: 50rpx;
    line-height: 50rpx;
    padding-top: 15rpx;
    padding-right: 30rpx;
    font-size: 30rpx;
    color: #3498db;
}
.article-options {
    display: flex;
    width: 100%;
    flex-direction: row;
    align-items: center;
}

.article-icon-box {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 25%;
}
.article-tag-container {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    padding-left: 30rpx;
    padding-right: 30rpx;
}

.article-tag {
    display: inline-block;
    font-size: 28rpx;
    padding: 0 15rpx;
    height: 50rpx;
    line-height: 50rpx;
    color: #7f8c8d;
    border: 1px solid #7f8c8d;
    border-radius: 28rpx;
    word-break: keep-all;
    margin-bottom: 15rpx;
    margin-right: 15rpx;
}



.floating-buttons-container {
    position: fixed;
    bottom: 40px;
    right: 0px;
    z-index: 9999;
    display: flex;
    flex-direction: row;
}
.floating-button-refresh {
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-right: 40rpx;
    background: #ecf0f1;
    box-shadow: 0rpx 5rpx 5rpx #bdc3c7;
}
.floating-button-add {
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-right: 40rpx;
    background: #FFC107;
    box-shadow: 0rpx 5rpx 5rpx #FFA000;
}

.floating-button-search {
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-right: 40rpx;
    background: #4DB6AC;
    box-shadow: 0rpx 5rpx 5rpx #009688;
}
.floating-button-icon {
    width: 60rpx;
    height: 60rpx;
}