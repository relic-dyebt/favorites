/*搜索*/

.page {
    width: 100%;
    height: 100%;
}

.search {
    display: flex;
    flex-direction: column;
}

.search .search-bar {
    position: relative;
    padding: 16rpx 20rpx;
    display: flex;
    box-sizing: border-box;
    background-color: #efeff4;
}

.search .search-wrap {
    position: relative;
    flex: auto;
    border-radius: 10rpx;
    background: #fff;
    border: 1rpx solid #e6e6ea;
}

.search .search-box {
    position: relative;
    display: flex;
    box-sizing: border-box;
}

.search .icon-search {
    margin: 18rpx 16rpx 16rpx 20rpx;
}

.search .search-input {
    flex: 1;
    padding-top: 6rpx;
    padding-bottom: 6rpx;
    padding-right:  60rpx;
    font-size: 32rpx;
    height: 64rpx;
    line-height: 64rpx;
}

input::-webkit-input-placeholder {
    color: rgb(117, 117, 117);
}

.search .icon-clear {
    position: absolute;
    top: 16rpx;
    right: 16rpx;
}

.search .cancel-btn {
    margin-left: 20rpx;
    line-height: 80rpx;
    color: #34495e;
    white-space: nowrap;
    font-size: 32rpx;
    box-sizing: border-box;
}

/*搜索结果*/

.articles {
    width: 100%;
    height: 91%;
    background: #f4f4f4;
}

.articles_scroll_view {
    height: 100%;
    background: #f4f4f4;
}

.articles_empty_view {
    padding-top: 200rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding-top: 150rpx;
    width: 100%;
}

.empty_image {
    width: 300rpx;
}

.empty_text {
    font-size: 36rpx;
    color: #757575;
}

.article {
    width: 100%;
    display: flex;
    flex-direction: column;
    box-shadow: 0rpx 5rpx 5rpx #ecf0f1;
    padding-bottom: 10rpx;
    margin-bottom: 10rpx;
    background: #ffffff;
}

.article_main {
    width: 100%;
    height: 340rpx;
    display: flex;
    flex-direction: row;
    justify-content: center;
}

.article_info {
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding-top: 20rpx;
    padding-left: 30rpx;
    padding-right: 25rpx;
    padding-bottom: 20rpx;
}

.article_title {
    font-size: 33rpx;
    color: #212121;
    line-height: 45rpx;
    max-height: 135rpx;
    overflow: hidden;
}

.article_abstract {
    font-size: 30rpx;
    color: #555555;
    padding-top: 20rpx;
    overflow: hidden;
    line-height: 40rpx;
    max-height: 160rpx;
}

.article_image_wrapper {
    width: 280rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    padding-right: 30rpx;
}

.article_image {
    width: 240rpx;
    height: 280rpx;
    border-radius: 10rpx;
}

.article_tags {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    padding-left: 30rpx;
    padding-right: 30rpx;
}

.article_tag {
    display: inline-block;
    font-size: 28rpx;
    padding: 0 15rpx;
    height: 50rpx;
    line-height: 50rpx;
    color: #7f8c8d;
    border: 1px solid #7f8c8d;
    border-radius: 28rpx;
    word-break: keep-all;
    margin-bottom: 15rpx;
    margin-right: 15rpx;
}

