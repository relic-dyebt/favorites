.page {
    width: 100%;
    height: 100%;
    background: #FAF7FE;
}

.input_instruction_wrapper {
    width: 100%;
    height: 150rpx;
    padding-bottom: 30rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}

.input_instruction {
    font-size:  32rpx;
    padding: 30rpx;
    color: #9A9A9A;
    border-bottom: 1px solid #D9D9D9;
}

.current_tags_scroll {
    width: 100%;
    height: 300rpx;
}

.tags_container {
    width: 100%;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
}

.tag_container {
    width: 33.33%;
    height: 150rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}

.tag_swiper {
    width: 90%;
    height: 120rpx;
}

.tag {
    width: 100%;
    height: 120rpx;
    background: #ffffff;
    line-height: 120rpx;
    text-align: center;
    border-radius: 20rpx;
}

.delete {
    width: 100%;
    height: 120rpx;
    background: #e74c3c;
    color: #ffffff;
    line-height: 120rpx;
    text-align: center;
    border-radius: 20rpx;
}

.input_wrapper {
    width: 100%;
    background: #ffffff;
    padding: 20rpx;
}

.button_wrapper {
    padding-top: 70rpx;
    width: 100%;
    height: 120rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}

.button {
    width: 70%;
    height: 100rpx;
    background: #FFC107;
    line-height: 100rpx;
    text-align: center;
    color: #ffffff;
    font-size: 36rpx;
    border-radius: 20rpx;
    box-shadow: 0 5rpx 5rpx #FFA000;
}

.empty_view {
    width: 100%;
    height: 300rpx;
    line-height: 300rpx;
    font-size: 36rpx;
    text-align: center;
}