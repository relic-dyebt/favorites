.page {
    width: 100%;
    height: 100%;
    background: #FAF7FE;
}

.all {
    display: flex;
    width: 100%;
    height: 100%;
    flex-direction: column;
}

.input_instruction_wrapper {
    width: 100%;
    height: 150rpx;
    padding-bottom: 30rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}

.input_instruction {
    font-size:  32rpx;
    padding: 30rpx;
    color: #9A9A9A;
    border-bottom: 1px solid #D9D9D9;
}

.input_wrapper {
    width: 100%;
    background: #ffffff;
    padding: 20rpx;
}

.category_selection_scroll {
    width: 100%;
    height: 450rpx;
}

.category_container {
    width: 100%;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
}

.category_wrapper {
    width: 33.33%;
    height: 150rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}

.category {
    width: 80%;
    height: 120rpx;
    background: #ffffff;
    color: #555555;
    font-size: 32rpx;
    line-height: 120rpx;
    text-align: center;
}

.category_selected {
    width: 80%;
    height: 120rpx;
    background: #656565;
    color: #ffffff;
    font-size: 32rpx;
    line-height: 120rpx;
    text-align: center;
}

.button_wrapper {
    padding-top: 70rpx;
    width: 100%;
    height: 120rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}

.button {
    width: 70%;
    height: 100rpx;
    background: #FFC107;
    line-height: 100rpx;
    text-align: center;
    color: #ffffff;
    font-size: 36rpx;
    border-radius: 20rpx;
    box-shadow: 0 5rpx 5rpx #FFA000;
}

.empty_view {
    width: 100%;
    height: 450rpx;
    line-height: 450rpx;
    font-size: 36rpx;
    text-align: center;
}






